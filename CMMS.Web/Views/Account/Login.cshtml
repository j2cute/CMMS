@using ClassLibrary.Models
@model LoginViewModel


@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
        /*
    *
    * ==========================================
    * CUSTOM UTIL CLASSES
    * ==========================================
    *
    */
        .login,
        .image {
            min-height: 100vh;
        }

.bg-image { /* background-image: url('https://res.cloudinary.com/mhmd/image/upload/v1555917661/art-colorful-contemporary-2047905_dxtao7.jpg');
       */ background-image: url('../../Content/Img/loghead.png');
          background-size: cover;
          background-position: center center; }
</style>
<div class="container-fluid">
    <div class="row no-gutter">
        <!-- The image half -->
        <div class="col-md-7 d-none d-md-flex bg-image"></div>


        <!-- The content half -->
        <div class="col-md-5 bg-light">
            <div class="login d-flex align-items-center py-5">

                <!-- Demo content-->
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-xl-8 mx-auto">
                   
                            <h3 class="display-4">
                                <img src="~/Content/LoginPage/logo.gif" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                                     style="opacity: .8;width:110px"><b>CMMS</b>
                            </h3>
                            <p class="text-muted mb-4">PN Configuration & Maintenance Management System</p>
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group mb-3">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control rounded-pill border-0 shadow-sm px-4", @autofocus = "", @placeholder = "User name" })
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group mb-3">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control rounded-pill border-0 shadow-sm px-4 text-primary", @placeholder = "Password" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                                </div>
                                <div class="custom-control custom-checkbox mb-3">
                                    @*<label for="customCheck1" class="custom-control-label">Remember password</label>*@

                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input" })
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "custom-control-label" })

                                </div>
                                <input type="submit" value="Log in" class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm" />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger", @id = "test" })


                                <div class="text-center d-flex justify-content-between mt-4">

                                    <p align="center"><strong>Designed & Developed by <a>PN Software Department</a>.</strong> All rights reserved.</p>

                                </div>
                            }
                        </div>
                    </div>
                </div><!-- End -->

            </div>
        </div><!-- End -->

    </div>
</div>