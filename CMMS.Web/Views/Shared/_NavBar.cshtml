    <!-- Left navbar links -->
    <ul class="navbar-nav" style="margin-left: auto !important;">

        <b> CONFIGURATION & MAINTENANCE MANAGEMENT SYSTEM</b>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto" style="align-content:center">



        <!-- Messages Dropdown Menu -->
        <li class="nav-item dropdown" tooltip="Hello">

            <a class="nav-link" data-toggle="dropdown" href="#" t>
                <i class="fas fa-sliders-h"></i>
                <span class="badge badge-danger navbar-badge"></span>
            </a>

            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                @{
                    foreach (var role in userRoles)
                    {
                        <a href="#" class="dropdown-item">
