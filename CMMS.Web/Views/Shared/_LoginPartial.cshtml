@using Microsoft.AspNet.Identity

<link href="~/Content/toggle.css" rel="stylesheet" />
<script src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js'></script>
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">

            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }

    <ul class="nav navbar-nav navbar-right">
        @*<li>
                @Html.ActionLink("Switch Role", "SwitchRole", "Account")
            </li>*@
        <li>
            @Html.ActionLink("Welcome, " + User.Identity.GetUserName() + "!", "#", "#", routeValues: null, htmlAttributes: new { title = "Hi", @class = "linkdisabled" })
        </li>
        <li class="dropdown">
            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Switch Roles<span class="caret"></span></a>
            <ul class="dropdown-menu">

                <li>
                    <div>
                        <section id="first" class="section">
                            <div class="radio-container"> <input type="radio" name="group1" id="radio-1"> <label for="radio-1"><span class="radio">Coffee</span></label> </div>
                            <div class="radio-container"> <input type="radio" name="group1" id="radio-2"> <label for="radio-2"><span class="radio">Tea</span></label> </div>
                            <div class="radio-container"> <input type="radio" name="group1" id="radio-3"> <label for="radio-3"><span class="radio">Cappuccino</span></label> </div>
                        </section>
                    </div>
                </li>
            </ul>



        </li>

    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
<style>
    .linkdisabled {
        cursor: text;
        pointer-events: none;
    }
</style>
