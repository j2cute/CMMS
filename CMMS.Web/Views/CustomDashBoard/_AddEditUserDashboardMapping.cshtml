                    },
                    failure: function () {
                    },
                    error: function () {
                        alert("Content load failed.");
                    }
                });
    }

    </script>


<div class="modal-header">
    <h4 class="modal-title">Dashboard Mapping</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    @using (Html.BeginForm("Save", "CustomDashboard", FormMethod.Post, new { enctype = "multipart/form-data", @id = "formUserDashboard" }))
    {
        <div class="card card-default">

            <div class="card-body">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>User Id<span style="color:red"> *</span></label>
                            @Html.DropDownList("ddUserIds", (SelectList)ViewBag.Details.UserDetails, new { @disabled=true, @id = "ddUserIds", @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Role Id<span style="color:red"> *</span></label>
                            @Html.DropDownList("ddRoleIds", (SelectList)ViewBag.Details.Roles, new {  @id = "ddRoleIds", @class = "form-control" })
                        </div>
                    </div>

                </div>


                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Dashboard Name<span style="color:red"> *</span></label>
                            @Html.DropDownList("ddDashboardIds", pageMode == PageMode.Add.ToString() ? new SelectList("", "Id", "Name") : (SelectList)ViewBag.Details.DashboardDetails, new { @id = "ddDashboardIds", @class = "form-control" })
                        </div>
                    </div>

                </div>


            </div>

            <div class="card-footer" id="footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <input id="btnSubmit" type="button" value="Submit" class="btn btn-primary float-right" />
            </div>

        </div>
    }
</div>