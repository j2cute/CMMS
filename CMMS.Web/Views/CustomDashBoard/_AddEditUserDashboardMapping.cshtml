}

    <script>

    var addPageMode = @Html.Raw(Json.Encode(PageMode.Add ));
    var pageMode = @Html.Raw(Json.Encode(ViewBag.PageMode));

    $(document).ready(function () {

       // LoadData();

        if (pageMode == addPageMode) {

            loadDashboards();

            $("#ddUserIds").change(function () {
                $.ajax({
                    type: "POST",
                    dataType: 'json',
                    data:
                    {
                        id: $('#ddUserIds').val()
                    },
                    url: '@Url.Action("GetRoles", "CustomDashboard")',
                    success: function (data) {
                        $("#ddRoleIds").empty();

                        $("#ddDashboardIds").empty();
                        $("#ddDashboardIds").prop("disabled", true);

                        data = data || {};
                        if (data.length > 0) {
                            $("#ddRoleIds").append('<option value="' + "-1" + '">' + "----Select----" + '</option>');
                            for (var i = 0; i < data.length; i++) {
                                $("#ddRoleIds").append('<option value="' + data[i].RoleId + '">' + data[i].RoleName + '</option>');
                            }

                            $("#ddRoleIds").prop("disabled", false);

                        } else {
                            $("#ddRoleIds").prop("disabled", true);

                        }

                    },
                    failure: function () {
                    },
                    error: function () {
                        alert("Content load failed.");
                    }
                });
            });
        } else {
    
            $("#ddRoleIds").prop("disabled", true);
        
            $("#ddDashboardIds").prop("disabled", true);
        }

    $("#ddRoleIds").change(function () {
        if ($('#ddRoleIds').val() != -1) {
            loadDashboards();
        } else {
            alert("Please select role !!");
        }
    });
    });


        function loadDashboards() {
                $.ajax({
                type: "POST",
                dataType: 'json',
                data:
                {
                    userId: $('#ddUserIds').val(),
                    roleId: $('#ddRoleIds').val()
                },
                url: '@Url.Action("GetAvailableDashboards", "CustomDashboard")',
                success: function (data) {
                    $("#ddDashboardIds").empty();
                    data = data || {};
                    if (data.length > 0) {
                        $("#ddDashboardIds").append('<option value="' + "-1" + '">' + "----Select----" + '</option>');
                        for (var i = 0; i < data.length; i++) {
                            $("#ddDashboardIds").append('<option value="' + data[i].DashId + '">' + data[i].DashName + '</option>');
                        }

                        $("#ddDashboardIds").prop("disabled", false);

                    } else {
                        $("#ddDashboardIds").append('<option value="' + "-1" + '">' + "----Select----" + '</option>');
                        $("#ddDashboardIds").empty();
                        $("#ddDashboardIds").prop("disabled", true);
                    }
                },
                failure: function () {
                },
                error: function () {
                    alert("Content load failed.");
                }
            });
        }


    $("#btnSubmit").click(function (e) {
        e.preventDefault();
        if (validate()) {

 
            $.ajax({
                type: "POST",
                async: false,
                url: "@Url.Action("Save")",
                dataType: 'json',
                data: {
                    userId: $('#ddUserIds').val(),
                    roleId: $('#ddRoleIds').val(),
                    dashboardId: $('#ddDashboardIds').val(),
                    pageMode: '@ViewBag.PageMode'
                },
                cache: false,
                success: function (data) {
                    if (data.type == "success")
                    {
                        $("#addEditMappingModal").modal('hide');
                        swal({ title: "Success", text: data.msg, type: "success", });

                        window.location.href = '@Url.Action("LinkedDashboards","CustomDashboard")' + "?userId=" + $('#ddUserIds').val();
                    }
                    else if (data.type == "error" || data.type == "failure")
                    {

                        swal({ title: "Error", text: data.msg, type: "error", });
                    }
                }
            });
        }
    });

    function enableSubmit() {

            if ($('#ddUserIds').val() === "-1" || $('#ddRoleIds').val() === "-1" || $('#ddDashboardIds').val() === "-1") {
                $("#btnSubmit").prop("disabled", true);
                alert("Dis")
            } else {
                $("#btnSubmit").prop("disabled", false);
                alert("e")
            }
        }

    function validate() {
        var isValid = true;
        var msg;

        if ($('#ddUserIds').val() == "-1") {
            addRemoveClass("#ddUserIds", false);
            msg = "Please select user id";
            isValid = false;
        } else {
            addRemoveClass("#ddUserIds", true);
        }

        if ($('#ddRoleIds').val() == "-1" || $('#ddRoleIds').val() == '') {
            addRemoveClass("#ddRoleIds", false);
            msg = "Please select role id";
            isValid = false;
        } else {
            addRemoveClass("#ddUserIds", true);
        }

        if ($('#ddDashboardIds').val() == "-1" || $('#ddDashboardIds').val() == '') {
            addRemoveClass("#ddDashboardIds", false);
            msg = "Please select dashboard id";
            isValid = false;
        } else {
            addRemoveClass("#ddDashboardIds", true);
        }

        if (!isValid) {
            swal({ title: "Error", text: msg, type: "error", });
        }

        return isValid;
    }

    function addRemoveClass(controlId, isSuccess) {
        if (isSuccess) {
            $(controlId).removeClass('text-danger');
        } else {
            $(controlId).addClass('text-danger');
        }
    }

