@using System.Configuration;
@model IEnumerable<WebApplication.Controllers.DataModel>
@{
    int slidingWindow = Convert.ToInt32(ConfigurationManager.AppSettings["SlidingWindowForRoutine"].ToString());
    ViewBag.Title = "LoadMopPlan";
    Layout = "~/Views/Shared/_LayoutPageNew.cshtml";
}

@(Html.DevExtreme().Scheduler()
    .ID("scheduler")
    .DataSource(Model)
    .TimeZone("America/Los_Angeles")
    .TextExpr("Text")
    .StartDateExpr("StartDate")
    .ShowAllDayPanel(false)
    .EndDateExpr("EndDate")
    .Views(views=> {
        views.Add()
        .Name("2 Months")
        .Type(SchedulerViewType.Month)
        .IntervalCount(2);
        views.Add().Name("Week").Type(SchedulerViewType.Week);
    })

    .Min(DateTime.Now.AddMonths(-slidingWindow))
    .Max(DateTime.Now.AddMonths(slidingWindow))
    .CurrentView(SchedulerViewType.Month)
    .CurrentDate(DateTime.Now)
    .StartDayHour(7.40)
)
